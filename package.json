{
    "name": "void",
    "version": "1.0.0",
    "description": "Whatsapp Bot",
    "main": "dist",
    "repository": "https://github.com/Waxaranai/void.git",
    "author": "Waxaranai",
    "license": "GPL-3.0",
    "private": false,
    "scripts": {
        "build": "rimraf dist && tsc",
        "lint": "eslint --ignore-path .gitignore \"**/*.+(ts|js)\"",
        "lint:fix": "eslint --ignore-path .gitignore \"**/*.+(ts|js)\" --fix",
        "start": "node dist",
        "start:dev": "ts-node src/index.ts",
        "test": "yarn lint && yarn build"
    },
    "eslintConfig": {
        "extends": "@hazmi35/eslint-config/typescript/node",
        "rules": {
            "@typescript-eslint/consistent-type-imports": [
                "warn",
                {
                    "prefer": "type-imports"
                }
            ]
        }
    },
    "devDependencies": {
        "@types/common-tags": "^1.8.0",
        "@types/express": "^4.17.8",
        "@types/node": "^14.14.6",
        "@types/superagent": "^4.1.10",
        "@typescript-eslint/eslint-plugin": "^4.6.1",
        "@typescript-eslint/parser": "^4.6.1",
        "dotenv": "^8.2.0",
        "rimraf": "^3.0.2",
        "ts-node": "^9.0.0",
        "typescript": "^4.0.5"
    },
    "dependencies": {
        "@hazmi35/eslint-config": "hazmi35/eslint-config",
        "@open-wa/wa-automate": "^3.0.13",
        "@types/socket.io": "^2.1.11",
        "common-tags": "^1.8.0",
        "eslint": "^7.12.1",
        "express": "^4.17.1",
        "socket.io": "^2.3.0",
        "superagent": "^6.1.0"
    }
}
